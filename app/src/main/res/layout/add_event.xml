<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="10dp"
                android:layout_margin="20px"
                card_view:cardBackgroundColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Event Create wizard!" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Enter event name" />


                    <EditText
                        android:id="@+id/event_name_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:text="" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px"
                card_view:cardBackgroundColor="@color/wallet_holo_blue_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Triggers" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/location_trigger_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location Trigger Enabled" />

                    <Button
                        android:id="@+id/maps_open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open map!" />


                    <EditText
                        android:id="@+id/event_lat_lng_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="19.134411,72.867168" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/sms_trigger_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SMS Trigger Enabled" />

                    <EditText
                        android:id="@+id/sms_trigger_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Enter action text" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/time_trigger_checkbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time Trigger Enabled" />


                    <EditText
                        android:id="@+id/in_date"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                    <Button
                        android:id="@+id/btn_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/in_date"
                        android:layout_toEndOf="@+id/in_date"
                        android:layout_toRightOf="@+id/in_date"
                        android:text="SELECT DATE" />

                    <EditText
                        android:id="@+id/in_time"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/in_date" />

                    <Button
                        android:id="@+id/btn_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/btn_date"
                        android:layout_alignStart="@+id/btn_date"
                        android:layout_below="@+id/btn_date"
                        android:text="SELECT TIME" />


                    <EditText
                        android:id="@+id/time_trigger_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="yyyy/MM/dd HH:mm" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px"
                card_view:cardBackgroundColor="@color/wallet_holo_blue_light"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Events"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/profile_change_event_enabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sound Profile Change Event Enabled" />

                    <CheckBox
                        android:id="@+id/profile_change_event_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set to silent ?" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/send_sms_event_enabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send SMS Event Enabled" />

                    <EditText
                        android:id="@+id/phone_number_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Enter phone number" />

                    <EditText
                        android:id="@+id/sms_message_event_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Enter message" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/tts_event_enabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text to speech Enabled" />

                    <EditText
                        android:id="@+id/tts_event_message_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Enter text to voice message" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="100dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="20px"
                card_view:cardBackgroundColor="@color/cardview_dark_background">


                <Button
                    android:id="@+id/submit_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit Event!" />

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>